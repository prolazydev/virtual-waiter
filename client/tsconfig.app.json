{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/__tests__/*",
		"node_modules",
	],
	"compilerOptions": {
		"noEmit": false,
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"noUnusedLocals": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"types": [ "node" ]
	},
	"files": [
		"auto-imports.d.ts",
		"components.d.ts",
	],
}