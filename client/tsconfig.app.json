{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"src/**/*.ts",
		"typed-router.d.ts",
	],
	"exclude": [
		"src/**/__tests__/*",
		"node_modules",
	],
	"compilerOptions": {
		"noEmit": false,
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"noUnusedLocals": true,
		"baseUrl": ".",
		"allowImportingTsExtensions": false,
		"paths": {
			"@/*": [
				"./src/*"
			],
		},
		"types": [ 
			"node",
			"unplugin-vue-router/types",
			"unplugin-vue-components/types",
		]
	},
	"files": [
		"auto-imports.d.ts",
		"components.d.ts",
	],
}